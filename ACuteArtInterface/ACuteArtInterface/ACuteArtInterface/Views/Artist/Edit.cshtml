@model ACuteArtInterface.Models.ArtistModel

@{
    ViewBag.Title = "Edit";
}

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<link href="@Url.Content("~/css/modal.css")" rel="stylesheet" type="text/css" />

<h1>Artists</h1>
<h2>Edit</h2>

<div id="ImageUrl1" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">NameEn Image URL Picture</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <img src="@Model.ImageUrl" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<div id="ThumbUrl1" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">NameEn Thumb URL Picture</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <img src="@Model.ThumbUrl" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<div id="IconUrl1" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">NameEn Icon URL Picture</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <img src="@Model.IconUrl" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ArtistId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" style="width: 1000px" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="4" style="width: 1000px"> </textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" style="width: 1000px" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order" class="control-label"></label>
                <input asp-for="Order" class="form-control" style="width: 1000px" />
                <span asp-validation-for="Order" class="text-danger"></span>
            </div>
            <div class="form-group">
                <!-- Modal -->
                Image URL (512x512)
                <input asp-for="ImageUrlFile" name="ImageUrlFile" id="ImageUrlFile" class="form-control" type="file" accept="image/jpeg, image/png, image/bmp, image/tif, image/tiff" style="width: 1000px" />
                <input value="@Model.ImageUrl" disabled style="width: 1000px" />
                <button type="button" data-toggle="modal" data-target="#ImageUrl1">Show</button>
                <span asp-validation-for="ImageUrlFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                Thumb URL (256x256)
                <input asp-for="ThumbUrlFile" name="ThumbUrlFile" id="ThumbUrlFile" class="form-control" type="file" accept="image/jpeg, image/png, image/bmp, image/tif, image/tiff" style="width: 1000px" />
                <input asp-for="ThumbUrl" disabled style="width: 1000px" />
                <button type="button" data-toggle="modal" data-target="#ThumbUrl1">Show</button>
                <span asp-validation-for="ThumbUrlFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                Icon URL (Camera Icon) (128x128)
                <input asp-for="IconUrlFile" name="IconUrlFile" id="IconUrlFile" class="form-control" type="file" accept="image/jpeg, image/png, image/bmp, image/tif, image/tiff" style="width: 1000px" />
                <input asp-for="IconUrl" disabled style="width: 1000px" />
                <button type="button" data-toggle="modal" data-target="#IconUrl1">Show</button>
                <span asp-validation-for="IconUrlFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Active" class="control-label"></label>
                <input asp-for="Active" class="form-control" />
                <span asp-validation-for="Active" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreationTime" class="control-label"></label>
                <input asp-for="CreationTime" class="form-control" disabled style="width: 1000px" />
                <span asp-validation-for="CreationTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Guid" class="control-label"></label>
                <input asp-for="Guid" class="form-control" disabled style="width: 1000px" />
                <span asp-validation-for="Guid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="button" data-toggle="modal" class="btn btn-primary" data-target="#myModal" value="Save" />
            </div>

            <!-- Modal -->
            <div id="myModal" class="modal fade" role="dialog">
                <div class="modal-dialog">
                    <!-- Modal content-->
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                        </div>
                        <div class="modal-body">
                            Are you sure you want to edit this record?
                        </div>
                        <div class="modal-footer">
                            <input type="submit" value="Save" id="btnEdit" class="btn btn-primary" />
                            <input type="button" value="Close" class="btn btn-primary" data-dismiss="modal" />
                        </div>
                    </div>

                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}

