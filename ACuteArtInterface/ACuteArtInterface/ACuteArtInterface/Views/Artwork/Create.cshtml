@model ACuteArtInterface.Models.ArtworkModel

@{
    ViewBag.Title = "Create";
}

<link rel="stylesheet" href="~/css/bootstrap-select.css" />
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<script type="text/javascript" src="~/lib/bootstrap/dist/js//bootstrap.bundle.min.js"></script>

<script type="text/javascript" src="~/lib/bootstrap/dist/js//jquery-ui.min.js"></script>

<script type="text/javascript" src="~/lib/bootstrap/dist/js/slick.min.js"></script>

<script src="~/lib/bootstrap/dist/js/jquery.validate.min.js"></script>

<script src="~/lib/bootstrap/dist/js/bootstrap-select.min.js"></script>

<link href="~/css/modal.css" rel="stylesheet" type="text/css" />

<script type="text/javascript">

    $(document).ready(function () {
        // Enable Live Search.
        $('#ArtistList').attr('data-live-search', true);

        $('.selectpicker').selectpicker(
        {
            width: '100%',
            //style: 'btn-warning',
        });
    });

</script>

<h1>Artworks</h1>
<h2>Create</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" style="width: 1000px" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="4" style="width: 1000px"> </textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ArtistId" class="control-label"></label>
                @Html.DropDownListFor(m => m.ArtistId, (IEnumerable<SelectListItem>)ViewBag.ArtistList, new { id = "ArtistList", @class = "selectpicker" })
                <span asp-validation-for="ArtistId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" class="form-control" asp-items="ViewBag.TypeID">
                    <option value="">-- Select Type --</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SourceMeta" class="control-label"></label>
                <textarea asp-for="SourceMeta" class="form-control" rows="4" style="width: 1000px"> </textarea>
                <span asp-validation-for="SourceMeta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ObjectUrl" class="control-label"></label>
                <div class="form-group">
                    <label class="control-label">IOS File</label>
                    <input class="form-control" name="iosFile" type="file" />
                </div>
                <div class="form-group">
                    <label class="control-label">Android File</label>
                    <input class="form-control" name="androidFile" type="file" />
                </div>
                <span asp-validation-for="ObjectUrl" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PrefabName" class="control-label"></label>
                <input asp-for="PrefabName" class="form-control" style="width: 1000px" />
                <span asp-validation-for="PrefabName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MarshalCode" class="control-label"></label>
                <textarea asp-for="MarshalCode" class="form-control" rows="4" style="width: 1000px"> </textarea>
                <span asp-validation-for="MarshalCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SizeDescription" class="control-label"></label>
                <input asp-for="SizeDescription" class="form-control" />
                <span asp-validation-for="SizeDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Size" class="control-label"></label>
                <input asp-for="Size" class="form-control" />
                <span asp-validation-for="Size" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Year" class="control-label"></label>
                <input asp-for="Year" class="form-control" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EditionSize" class="control-label"></label>
                <input asp-for="EditionSize" class="form-control" />
                <span asp-validation-for="EditionSize" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Color" class="control-label"></label>
                <input asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IconUrlFile" class="control-label"></label>
                <input asp-for="IconUrlFile" class="form-control" name="IconUrlFile" id="IconUrlFile" type="file" accept="image/gif, image/jpeg, image/png" />
                <span asp-validation-for="IconUrlFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrlFile" class="control-label"></label>
                <input asp-for="ImageUrlFile" class="form-control" name="ImageUrlFile" id="ImageUrlFile" type="file" accept="image/gif, image/jpeg, image/png" />
                <span asp-validation-for="ImageUrlFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ThumbUrlFile" class="control-label"></label>
                <input asp-for="ThumbUrlFile" class="form-control" name="ThumbUrlFile" id="ThumbUrlFile" type="file" accept="image/gif, image/jpeg, image/png" />
                <span asp-validation-for="ThumbUrlFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TradeUrlFile" class="control-label"></label>
                <input asp-for="TradeUrlFile" class="form-control" name="TradeUrlFile" id="TradeUrlFile" type="file" accept="image/gif, image/jpeg, image/png" />
                <span asp-validation-for="TradeUrlFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SignUrlFile" class="control-label"></label>
                <input asp-for="SignUrlFile" class="form-control" name="SignUrlFile" id="SignUrlFile" type="file" accept="image/gif, image/jpeg, image/png" />
                <span asp-validation-for="SignUrlFile" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


