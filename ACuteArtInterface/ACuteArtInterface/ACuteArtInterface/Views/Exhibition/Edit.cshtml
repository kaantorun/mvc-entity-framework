<!-- Modal -->
<div id="showMap" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Latitude / Longitude</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">

                <iframe width="700"
                        height="600"
                        frameborder="0"
                        scrolling="no"
                        marginheight="0"
                        marginwidth="0"
                        name="iframex"
                        src="https://maps.google.com/maps?q=@Model.Latitude,@Model.Longitude&hl=es&z=14&amp;output=embed"></iframe>

                <div class="col-md-10">
                    Latitude : @Model.Latitude
                </div>
                <div class="col-md-10">
                    Longitude : @Model.Longitude
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ExhibitionId" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" style="width: 1000px" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="4" style="width: 1000px"> </textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Owner" class="control-label"></label>
                @Html.DropDownListFor(m => m.OwnerId, (IEnumerable<SelectListItem>)ViewBag.UserList, new { id = "UserList", @class = "selectpicker" })
                <span asp-validation-for="Owner" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Artwork" class="control-label"></label><br />
                @*@Html.DropDownListFor(m => m.Artwork, (IEnumerable<SelectListItem>)ViewBag.ArtworkList, new { @class = "selectpicker", id = "Subjects_dropdown" })*@

                @Html.ListBoxFor(model => model.ExhibitionArtworkIds, new MultiSelectList(ViewBag.ArtworkList, "Value", "Text"), new { @class = "show-tick form-control", multiple = "multiple", id = "ddlArtworks" })
            </div>
            <div class="form-group">
                <label asp-for="GeoFenced" class="control-label"></label>
                <input asp-for="GeoFenced" class="form-control" />
                <span asp-validation-for="GeoFenced" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Latitude" class="control-label"></label>
                <input asp-for="Latitude" class="form-control" />
                <span asp-validation-for="Latitude" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Longitude" class="control-label"></label>
                <input asp-for="Longitude" class="form-control" />
                <span asp-validation-for="Longitude" class="text-danger"></span>
                <br />
                <button type="button" data-toggle="modal" data-target="#showMap">Show Me The Map</button>
            </div>
            <div class="form-group">
                <label asp-for="Radius" class="control-label"></label>
                <input asp-for="Radius" class="form-control" />
                <span asp-validation-for="Radius" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Active" class="control-label"></label>
                <input asp-for="Active" class="form-control" />
                <span asp-validation-for="Active" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order" class="control-label"></label>
                <input asp-for="Order" class="form-control" />
                <span asp-validation-for="Order" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="UseGps" class="control-label"></label>
                <input asp-for="UseGps" class="form-control" />
                <span asp-validation-for="UseGps" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ScanRadius" class="control-label"></label>
                <input asp-for="ScanRadius" class="form-control" />
                <span asp-validation-for="ScanRadius" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ShowRadius" class="control-label"></label>
                <input asp-for="ShowRadius" class="form-control" />
                <span asp-validation-for="ShowRadius" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ViewRadius" class="control-label"></label>
                <input asp-for="ViewRadius" class="form-control" />
                <span asp-validation-for="ViewRadius" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MainMapUrlFile" class="control-label"></label>
                <input asp-for="MainMapUrl" value="@Model.MainMapUrl" readonly class="form-control" style="width: 1000px" />
                <input asp-for="MainMapUrlFile" class="form-control" name="MainMapUrlFile" id="MainMapUrlFile" type="file" accept="image/jpeg, image/png, image/bmp, image/tif, image/tiff" />
                <button type="button" data-toggle="modal" data-target="#mainMapUrl">Show</button>
                <span asp-validation-for="MainMapUrlFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MapUrlFile" class="control-label"></label>
                <input asp-for="MapUrl" value="@Model.MapUrl" readonly class="form-control" style="width: 1000px" />
                <input asp-for="MapUrlFile" class="form-control" name="MapUrlFile" id="MapUrlFile" type="file" accept="image/jpeg, image/png, image/bmp, image/tif, image/tiff" />
                <button type="button" data-toggle="modal" data-target="#mapUrl">Show</button>
                <span asp-validation-for="MapUrlFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IconUrlFile" class="control-label"></label>
                <input asp-for="IconUrl" value="@Model.IconUrl" readonly class="form-control" style="width: 1000px" />
                <input asp-for="IconUrlFile" class="form-control" name="IconUrlFile" id="IconUrlFile" type="file" accept="image/jpeg, image/png, image/bmp, image/tif, image/tiff" />
                <button type="button" data-toggle="modal" data-target="#iconUrl">Show</button>
                <span asp-validation-for="IconUrlFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ThumbUrlFile" class="control-label"></label>
                <input asp-for="ThumbUrl" value="@Model.ThumbUrl" readonly class="form-control" style="width: 1000px" />
                <input asp-for="ThumbUrlFile" class="form-control" name="ThumbUrlFile" id="ThumbUrlFile" type="file" accept="image/jpeg, image/png, image/bmp, image/tif, image/tiff" />
                <button type="button" data-toggle="modal" data-target="#thumbUrl">Show</button>
                <span asp-validation-for="ThumbUrlFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IntroUrlFile" class="control-label"></label>
                <input asp-for="IntroUrl" value="@Model.IntroUrl" readonly class="form-control" style="width: 1000px" />
                <input asp-for="IntroUrlFile" class="form-control" name="IntroUrlFile" id="IntroUrlFile" type="file" accept="video/mp4" />
                <button type="button" data-toggle="modal" data-target="#introUrl">Show</button>
                <span asp-validation-for="IntroUrlFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HowtoFile" class="control-label"></label>
                <input asp-for="Howto" value="@Model.Howto" readonly class="form-control" style="width: 1000px" />
                <input asp-for="HowtoFile" class="form-control" name="HowtoFile" id="HowtoFile" type="file" accept="video/mp4" />
                <button type="button" data-toggle="modal" data-target="#howtoUrl">Show</button>
                <span asp-validation-for="HowtoFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Created" class="control-label"></label>
                <input asp-for="Created" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Guid" class="control-label"></label>
                <input asp-for="Guid" class="form-control" readonly />
            </div>
            <h1>Exhibition Rooms</h1>
            <p>
                @Html.ActionLink("Create New Exhibition Room", "Create", "ExhibitionRoom")
            </p>
            <div class="form-group">
                @{
                    List<ExhibitionRoomModel> rooms = ViewBag.ExhibitionRooms;

                    if (rooms.Count == 0)
                    {
                        <h4>There are no Exhibition Rooms Assigned to @Model.Title</h4>
                    }
                    else
                    {
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>
                                        Title
                                    </th>
                                    <th>
                                        Description
                                    </th>
                                    <th>
                                        Order
                                    </th>
                                    <th>
                                        ScanRadius
                                    </th>
                                    <th>
                                        ShowOnMap
                                    </th>
                                    <th>
                                        VaGuid
                                    </th>
                                    <th>
                                        Va
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>


                                @foreach (var room in rooms)
                                {
                                    <tr>
                                        <td>
                                            @room.Title
                                        </td>
                                        <td>
                                            @room.Description
                                        </td>
                                        <td>
                                            @room.Order
                                        </td>
                                        <td>
                                            @room.ScanRadius
                                        </td>
                                        <td>
                                            @room.ShowOnMap
                                        </td>
                                        <td>
                                            @room.VaGuid
                                        </td>
                                        <td>
                                            @room.Va
                                        </td>
                                        <td>
                                            @Html.ActionLink("Edit", "Edit", "ExhibitionRoom", new { id = room.RoomId }) |
                                            @Html.ActionLink("Details", "Details", "ExhibitionRoom", new { id = room.RoomId })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                }

            </div>

            <div class="form-group">
                <input type="button" data-toggle="modal" class="btn btn-primary" data-target="#saveModal" value="Save" />
            </div>

            <!-- Modal -->
            <div id="saveModal" class="modal fade" role="dialog">
                <div class="modal-dialog">
                    <!-- Modal content-->
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                        </div>
                        <div class="modal-body">
                            Are you sure you want to edit this record?
                        </div>
                        <div class="modal-footer">
                            <input type="submit" value="Save" id="btnEdit" class="btn btn-primary" />
                            <input type="button" value="Close" class="btn btn-primary" data-dismiss="modal" />
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

