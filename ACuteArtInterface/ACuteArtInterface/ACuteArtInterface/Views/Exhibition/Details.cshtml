<h4>Exhibition Rooms</h4>
<div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Title
                </th>
                <th>
                    Description
                </th>
                <th>
                    Order
                </th>
                <th>
                    ScanRadius
                </th>
                <th>
                    ShowOnMap
                </th>
                <th>
                    VaGuid
                </th>
                <th>
                    Va
                </th>
            </tr>
        </thead>
        <tbody>
            @{
                List<ExhibitionRoomModel> rooms = ViewBag.ExhibitionRooms;

                foreach (var room in rooms)
                {
                    <tr>
                        <td>
                            @room.Title
                        </td>
                        <td>
                            @room.Description
                        </td>
                        <td>
                            @room.Order
                        </td>
                        <td>
                            @room.ScanRadius
                        </td>
                        <td>
                            @room.ShowOnMap
                        </td>
                        <td>
                            @room.VaGuid
                        </td>
                        <td>
                            @room.Va
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

