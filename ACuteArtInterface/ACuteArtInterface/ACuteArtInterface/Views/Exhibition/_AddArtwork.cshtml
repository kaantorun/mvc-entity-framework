        });
    });

    $('#myPager').on('click', 'a', function (e) {
        //prevent action link normal functionality
        e.preventDefault();
        if (this.href != null && this.href != "") {
            $.ajax({
                url: this.href,
                type: 'GET',
                cache: false,
                success: function (result) {
                    $('#PreviewArtwork').html(result);
                }
            });
            return false;
        }
    });

    $('#filter').on('click', 'a', function (e) {
        //prevent action link normal functionality
        e.preventDefault();
