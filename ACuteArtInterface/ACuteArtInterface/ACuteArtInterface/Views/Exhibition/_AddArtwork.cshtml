            $.ajax({
                url: this.href,
                type: 'GET',
                data: { sortOrder: "NameSortParm", currentFilter: $("#SearchString").val(), searchString: $("#SearchString").val(), exhibitionId: @ViewData["ExhibitionId"]  },
